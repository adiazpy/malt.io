#deleteRecipeDialog.modal.fade(role="dialog", data-bind="with: recipeDetail")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type="button", data-dismiss="modal")
                h4.modal-title Delete Recipe
            .modal-body
                | Are you sure you want to delete this recipe?
            .modal-footer
                button.btn.btn-default(data-dismiss="modal") Cancel
                button.btn.btn-danger(data-dismiss="modal", data-bind="click: delConfirm")
                    i.icon-remove
                    | &nbsp;Delete

#cloneRecipeDialog.modal.fade(role="dialog", data-bind="with: recipeDetail")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type="button", data-dismiss="modal")
                h4.modal-title Clone Recipe
            .modal-body
                | Cloning this recipe will create a copy of it in your own account with the same name. You will own the copy and be able to edit, brew, and share your clone.
            .modal-footer
                button.btn.btn-default(data-dismiss="modal") Cancel
                button.btn.btn-primary(data-dismiss="modal", data-bind="click: clone")
                    i.icon-share
                    | &nbsp;Clone

#exportRecipeDialog.modal.fade(role="dialog", data-bind="with: recipeDetail")
    .modal-dialog
        .modal-content
            .modal-header
                button.close(type="button", data-dismiss="modal")
                h4.modal-title Export Recipe
            .modal-body
                p Below you can export your recipe as BeerXML 1.0.
                textarea(style="width: 100%; height: 200px;", data-bind="text: recipe() && recipe().toBeerXml()")
            .modal-footer
                button.btn.btn-default(data-dismiss="modal") Cancel
                button.btn.btn-primary(data-dismiss="modal", data-bind="click: exportBeerXml")
                    i.icon-download-alt
                    | &nbsp;Download BeerXML
