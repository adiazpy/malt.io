body
    color black
    background #222 url(/images/debut_dark.png) top left repeat

#pageContainer
    background #ddd url(/images/gray_jean.png) top left repeat
    padding-top 20px
    margin-bottom 48px
    border-bottom-left-radius 15px
    border-bottom-right-radius 15px
    box-shadow 0px 5px 50px rgba(0, 0, 0, 0.5)

h1, h2
    font-family 'Germania One'

h5
    font-size 80%
    font-weight bold
    text-transform uppercase
    padding 0
    margin 6px 0

a
    color #08c
    text-decoration none

img.user
    margin-right 4px
    border-radius 2px

h1[contentEditable], h2[contentEditable], p[contentEditable], span[contentEditable], td[contentEditable]
    color #555
    background-color white
    border 1px solid #ccc
    border-radius 3px
    box-shadow inset 0 1px 1px rgba(0,0,0,0.075);
    padding 4px
    margin 6px 0

td[contentEditable]
    border-top none
    border-bottom none
    box-shadow none

td.num, th.num
    text-align right

.navbar-inverse
    a
        cursor pointer

    .navbar-inner
        background linear-gradient(#3a3a3a, #303030 48%, #343434 48%, #222 51%, #111)
        box-shadow 0 3px 10px rgba(0, 0, 0, 0.3)

    .container
        padding-left 0
        padding-right 0

    .navbar-collapse
        padding-right 0

    .navbar-brand
        color #ccc
        font-family 'Germania One'
        font-size 32px
        padding-top 18px
        padding-bottom 12px
        padding-left 0

    .btn-group
        margin-top 10px

        .btn-default
            color #ccc
            background-color #333
            border-color #222

            &:hover
                color white
                background-color #444

        .active
            background-color #430

            &:hover
                background-color #541

.breadcrumb
    background-color rgba(255, 255, 255, 0.5)
    border 1px solid rgba(0, 0, 0, 0.1)

.jumbotron
    background-color rgba(0, 0, 0, 0.1)

.ellipsize
    display inline-block
    width 100%
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

.user-list-item
    float left
    display block

    img
        float left
        margin-right 1em
        margin-bottom 1em
        width 40px
        height 40px
        border-radius 5px

    h6
        font-size 11px
        text-transform uppercase
        margin 4px 0

.user-profile
    .avatar
        margin-right 1em
        border-radius 5px

.srm
    display inline-block
    width 14px
    height 14px
    margin-right 4px
    margin-bottom -1px
    border 1px solid rgba(0, 0, 0, 0.2)
    border-radius 3px

.action
    .content
        margin 1em

.recipe
    position relative
    background-color rgba(255, 255, 255, 0.8)
    border 1px solid rgba(0, 0, 0, 0.1)
    border-radius 3px
    padding 12px
    margin-bottom 1em

    h4
        padding 0
        margin 0 0 0.5em 0

    h5
        position absolute
        top 0
        right 0
        background-color rgba(0, 0, 0, 0.1)
        margin 0
        padding 4px 8px
        border-bottom-left-radius 5px

.no-pad
    padding 0

.fade
    opacity .5

.fade-hard
    opacity .25

.remove
    padding 0 6px !important

    a
        cursor pointer
        text-decoration none
        color #d2322d
        font-size 150%

.label-inverse
    color white
    background-color #333

.timeline
    position relative
    
    ol
        position relative
        margin-left 110px

        li
            position relative
            margin-bottom 5px

        .label
            display inline-block
            position absolute
            left -110px
            width 90px
            height 100%
            text-align right
            padding 5px

        .round
            left -75px
            width 20px
            border-radius 10px

    .line
        display block
        position absolute
        top 0
        bottom 12px
        left 44px
        width 2px
        background-color black

.key
    display inline-block
    color black
    background #ddd
    border 1px solid #bbb
    border-radius 3px
    padding .1em .3em
    margin 0
    box-shadow inset 1px 1px rgba(255, 255, 255, 0.5), inset -1px -1px rgba(255, 255, 255, 0.5)

.save
    position fixed
    bottom -20px
    left 0px
    right 0px
    z-index 1

    p
        margin-top 6px

.license
    text-align center
    margin 1em

.footer-links
    padding 12px
    margin 24px auto
    background-color rgba(0, 0, 0, 0.05)
    border-top 1px solid rgba(0, 0, 0, 0.1)
    border-bottom 1px solid rgba(0, 0, 0, 0.1)

    .footer-logo
        display inline-block
        font-family 'Germania One'
        font-size 30pt
        color transparent
        margin-top 30px
        margin-left 16px
        text-shadow 1px 1px rgba(255, 255, 255, 0.3), -1px -1px rgba(0, 0, 0, 0.2)

.footer
    text-align center

    .copyright
        opacity 0.3

#loading
    text-align center
    padding 3em

#user-detail-map
    height 160px
    border 1px solid rgba(0, 0, 0, 0.2)
    border-radius 2px

